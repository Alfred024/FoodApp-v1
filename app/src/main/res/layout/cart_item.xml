<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingHorizontal="20sp"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/fatherContainer"
            android:orientation="horizontal"
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/foodContainer"
                android:layout_width="120sp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="80sp"
                    android:background="@drawable/comida2"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_toRightOf="@id/foodContainer"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="30sp"
                    android:paddingVertical="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Platillo de comida"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="$$$"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="num de producto"/>

            </LinearLayout>


            <Button
                android:layout_alignParentEnd="true"
                android:background="@color/primary_1"
                android:layout_width="35sp"
                android:layout_height="match_parent"
                android:drawableEnd="@android:drawable/ic_menu_send"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>