<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/containers_layoutRV_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/food_card_vertical"
        android:layout_width="380sp"
        android:layout_height="250sp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:contentDescription="@string/food_image"
            android:id="@+id/food_image_view"
            android:layout_width="380sp"
            android:layout_height="wrap_content"
            android:background="@drawable/comida1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="380sp"
            android:layout_height="60sp"
            android:layout_marginTop="190sp"
            android:background="@color/primary_1">

            <TextView
                android:id="@+id/food_title_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="5sp"
                android:text="@string/informaci_n_de_la_comida"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/food_price_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:text="$$$"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>